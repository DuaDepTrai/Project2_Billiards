<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.DatePicker?>
<AnchorPane stylesheets="@../css/customer.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="src.billiardsmanagement.controller.customer.CustomerController">
    <TextField>
        <!-- Search Section -->
        <HBox spacing="10" alignment="CENTER_LEFT" AnchorPane.rightAnchor="270.0" AnchorPane.topAnchor="14.0"/>
            <Region HBox.hgrow="ALWAYS"/> <!-- Đẩy btnAddNewCategory về bên phải -->

            <TextField fx:id="searchField" styleClass="search-field" prefWidth="200.0"
                       promptText="Search by name, phone..."/>
            <!--                <HBox.margin>-->
            <!--                    <Insets right="5.0" />-->
            <!--                </HBox.margin>-->
        </TextField>
        <!--            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearchCustomer" prefHeight="26.0" prefWidth="80.0" styleClass="search-button" text="Search" textAlignment="CENTER" />-->


    <Button fx:id="addCustomerBtn" mnemonicParsing="false" onAction="#handleAddCustomer" prefHeight="35.0"
            prefWidth="240.0" styleClass="add-button" text="Add New Customer" textAlignment="CENTER" textFill="WHITE"
            AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="22.0">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>

    <!-- Customer Form - Hidden by default -->
    <!-- Inside TableView columns -->
    <TableView fx:id="customerTableView">
        <columns>
            <TableColumn fx:id="customerIdCol" text="Customer ID"/>
            <TableColumn fx:id="nameCol" prefWidth="200.0" text="Customer Name"/>
            <TableColumn fx:id="phoneCol" prefWidth="150.0" text="Phone Number"/>
            <TableColumn fx:id="addressCol" prefWidth="200.0" text="Address"/>
            <TableColumn fx:id="birthdayCol" prefWidth="120.0" text="Birthday"/>
            <TableColumn fx:id="totalPlaytimeCol" prefWidth="150.0" text="Total Playtime"/>
        </columns>
    </TableView>

    <!-- Inside customer form -->
    <VBox fx:id="customerForm" prefWidth="240.0" prefHeight="531.0" spacing="10"
          styleClass="form-container" visible="false"
          AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="70.0">

        <TextField fx:id="nameField" prefWidth="200.0" promptText="Customer Name"/>
        <TextField fx:id="phoneField" prefWidth="200.0" promptText="Phone Number"/>
        <TextField fx:id="addressField" promptText="Address"/>
        <DatePicker fx:id="birthdayPicker"/>
        <Label fx:id="playtimeLabel" prefWidth="200.0" text="0.00" styleClass="playtime-label"/>
        <HBox spacing="10">
            <Button fx:id="saveCustomerBtn" mnemonicParsing="false" onAction="#handleSaveCustomer" prefWidth="95.0"
                    styleClass="save-button" text="Save"/>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancelAdd" prefWidth="95.0"
                    styleClass="cancel-button" text="Cancel"/>
        </HBox>
    </VBox>

    <!-- Inside update form -->
    <VBox fx:id="updateForm" prefWidth="240.0" prefHeight="531.0" spacing="10"
          styleClass="form-container" visible="false"
          AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="63.0">
        <TextField fx:id="updateNameField" prefWidth="200.0" promptText="Customer Name"/>
        <TextField fx:id="updatePhoneField" prefWidth="200.0" promptText="Phone Number"/>
        <TextField fx:id="updateAddressField" prefWidth="200.0" promptText="Address"/>
        <DatePicker fx:id="updateBirthdayPicker" prefWidth="200.0" promptText="Birthday"/>
        <Label fx:id="updatePlaytimeLabel" prefWidth="200.0" styleClass="playtime-label"/>
        <HBox spacing="10">
            <Button fx:id="updateCustomerBtn" mnemonicParsing="false" onAction="#handleUpdateCustomer" prefWidth="95.0"
                    styleClass="update-button" text="Update"/>
            <Button fx:id="removeCustomerBtn" mnemonicParsing="false" onAction="#handleRemoveCustomer" prefWidth="95.0"
                    styleClass="remove-button" text="Remove"/>
        </HBox>
    </VBox>
</AnchorPane>
