<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/customer.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.billiardsmanagement.controller.CustomerController">
    <children>
        <!-- Header Section -->
        <VBox spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label text="Customer Management" styleClass="section-header">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <!-- Search and Add Section -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <HBox spacing="10" styleClass="search-container" HBox.hgrow="ALWAYS">
                    <TextField fx:id="searchField" promptText="Search by name or phone..." styleClass="search-field" />
                    <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleSearchCustomer" styleClass="search-button" text="Search" />
                </HBox>

                <Button fx:id="addCustomerBtn" mnemonicParsing="false" onAction="#handleAddCustomer" styleClass="add-button" text="Add New Customer">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Customer Form -->
            <VBox styleClass="form-container" spacing="15">
                <Label text="Customer Information" styleClass="section-header">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Customer Name" styleClass="field-label" />
                        <TextField fx:id="nameField" promptText="Enter customer name" styleClass="form-field" />
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Phone Number" styleClass="field-label" />
                        <TextField fx:id="phoneField" promptText="Enter phone number" styleClass="form-field" />
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Total Playtime (hours)" styleClass="field-label" />
                        <TextField fx:id="playtimeField" promptText="Enter total playtime" styleClass="form-field" />
                    </VBox>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="updateCustomerBtn" mnemonicParsing="false" onAction="#handleUpdateCustomer" styleClass="update-button" text="Update" />
                    <Button fx:id="removeCustomerBtn" mnemonicParsing="false" onAction="#handleRemoveCustomer" styleClass="remove-button" text="Remove" />
                </HBox>
            </VBox>
        </VBox>

        <!-- Customer Table -->
        <TableView fx:id="customerTableView" styleClass="customer-table" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="400.0" AnchorPane.bottomAnchor="20.0">
            <columns>
                <TableColumn fx:id="customerIdCol" prefWidth="80.0" text="ID" styleClass="number-column" />
                <TableColumn fx:id="nameCol" prefWidth="300.0" text="Customer Name" styleClass="text-column" />
                <TableColumn fx:id="phoneCol" prefWidth="200.0" text="Phone Number" styleClass="text-column" />
                <TableColumn fx:id="totalPlaytimeCol" prefWidth="150.0" text="Total Playtime" styleClass="number-column" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>
