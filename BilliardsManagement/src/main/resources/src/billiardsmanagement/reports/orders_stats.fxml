<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="src.billiardsmanagement.controller.report.OrderStatsController">

    <!-- Phần trên: Thông tin tổng doanh thu -->
    <HBox spacing="20">
        <VBox>
            <Label text="Tổng số đơn hàng" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label fx:id="lblTotalOrders" text="0" style="-fx-font-size: 20px; -fx-text-fill: blue;" />
        </VBox>
        <VBox>
            <Label text="Tổng doanh thu" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label fx:id="lblTotalRevenue" text="0" style="-fx-font-size: 20px; -fx-text-fill: green;" />
        </VBox>
    </HBox>

    <!-- Phần giữa: Bộ lọc -->
    <HBox spacing="10">
        <Label text="Lọc theo ngày:" />
        <DatePicker fx:id="datePickerFrom" />
        <Label text="đến" />
        <DatePicker fx:id="datePickerTo" />

        <Label text="Chọn tháng:" />
        <ComboBox fx:id="cbMonth" />

        <Label text="Chọn năm:" />
        <ComboBox fx:id="cbYear" />

        <Button text="Lọc" fx:id="btnFilter" />
    </HBox>

    <!-- Phần dưới: Bảng dữ liệu -->
    <TableView fx:id="tblRevenue">
        <columns>
            <TableColumn text="Ngày" fx:id="colDate" />
            <TableColumn text="Số đơn hàng" fx:id="colOrders" />
            <TableColumn text="Doanh thu" fx:id="colRevenue" />
        </columns>
    </TableView>

    <!-- Biểu đồ -->
    <HBox spacing="20">
        <BarChart fx:id="barChartRevenue" title="Doanh thu theo thời gian">
            <xAxis>
                <CategoryAxis fx:id="xAxisTime" label="Thời gian"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxisRevenue" label="Doanh thu"/>
            </yAxis>
        </BarChart>

        <PieChart fx:id="pieChartTables" title="Doanh thu theo nhóm bàn"/>
        <PieChart fx:id="pieChartProducts" title="Doanh thu theo nhóm sản phẩm"/>
    </HBox>

</BorderPane>
