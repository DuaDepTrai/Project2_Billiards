<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="src.billiardsmanagement.controller.poolTables.ChooseOrderTimeController">

    <VBox fx:id="popupContent"
          alignment="CENTER"
          spacing="10"
          style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: lightgray;">

        <Label text="Select Date &amp; Time" style="-fx-font-size: 16px;"/>

        <HBox alignment="CENTER" spacing="10">
            <DatePicker fx:id="datePicker" style="-fx-font-size: 14px;"/>
            <ComboBox fx:id="hourPicker" style="-fx-font-size: 14px;"/>
            <ComboBox fx:id="minutePicker" style="-fx-font-size: 14px;"/>
        </HBox>

        <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm"/>

    </VBox>

</AnchorPane>