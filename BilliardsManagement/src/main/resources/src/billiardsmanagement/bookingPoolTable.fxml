<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.billiardsmanagement.controller.BookingsController">
    <TableView fx:id="bookingPoolTable" prefHeight="100.0" prefWidth="750.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <columns>
            <TableColumn fx:id="tableName" prefWidth="133.5" text="Table Name" />
            <TableColumn fx:id="startTime" prefWidth="113.5" text="Start Time" />
            <TableColumn fx:id="endTime" prefWidth="122.0" text="End Time" />
            <TableColumn fx:id="timeplay" prefWidth="100.0" text="Timeplay" />
            <TableColumn fx:id="price" prefWidth="145.0" text="Price" />
            <TableColumn fx:id="cost" prefWidth="135.0" text="Cost" />
        </columns>
    </TableView>
    <Button fx:id="addNewBooking" prefWidth="130" text="Add New Booking" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="0.0" />
    <Button fx:id="editBooking" prefWidth="110" text="Edit Booking" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="140.0" />
    <Button fx:id="deleteBooking" prefWidth="130" text="Delete Booking" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="260.0" />
</AnchorPane>
