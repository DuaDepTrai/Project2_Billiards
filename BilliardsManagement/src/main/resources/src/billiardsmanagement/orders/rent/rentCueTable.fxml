<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.billiardsmanagement.controller.orders.rent.RentCueController">
    <!-- TableView -->
    <TableView fx:id="rentCueTable" prefHeight="120" prefWidth="750" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <columns>
            <TableColumn fx:id="productName" prefWidth="199.0" text="Product Name" />
            <TableColumn fx:id="startTime" prefWidth="141.0" text="Start Time" />
            <TableColumn fx:id="endTime" prefWidth="133.5" text="End Time" />
            <TableColumn fx:id="timeplay" prefWidth="124.0" text="Timeplay" />
            <TableColumn fx:id="price" prefWidth="153.0" text="Price" />
            <TableColumn fx:id="cost" prefWidth="89.5" text="Cost" />
        </columns>
    </TableView>

    <!-- Buttons below TableView -->
    <Button fx:id="addRentCue" prefWidth="130" text="Add Rent Cue" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="0.0" />
    <Button fx:id="editRentCue" prefWidth="110" text="Edit Rent Cue" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="140.0" />
    <Button fx:id="deleteRentCue" prefWidth="130" text="Delete Rent Cue" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="260.0" />
</AnchorPane>
