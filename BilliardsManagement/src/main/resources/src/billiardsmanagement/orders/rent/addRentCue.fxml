<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="src.billiardsmanagement.controller.orders.rent.AddRentCueController"
      spacing="10"
      alignment="CENTER"
      prefWidth="400">
    
    <HBox spacing="10" alignment="CENTER">
        <Label text="Product Name:" minWidth="100"/>
        <ComboBox fx:id="productNameComboBox" prefWidth="250" promptText="Select Product"/>
    </HBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Label text="Promotion:" minWidth="100"/>
        <ComboBox fx:id="promotionComboBox" prefWidth="250" promptText="Select Promotion"/>
    </HBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Label text="Quantity:" minWidth="100"/>
        <TextField fx:id="quantityTextField" prefWidth="250" promptText="Enter Quantity"/>
    </HBox>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Add Rent Cue" onAction="#addRentCue" prefWidth="120"/>
        <Button text="Cancel" onAction="#handleCancel" prefWidth="120"/>
    </HBox>
</VBox>