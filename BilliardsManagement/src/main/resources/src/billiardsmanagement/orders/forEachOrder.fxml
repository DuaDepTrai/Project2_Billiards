<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.VBox?>
<AnchorPane fx:id="totalBooking" prefHeight="609.0" prefWidth="1032.0" stylesheets="@../css/forEachOrderStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.billiardsmanagement.controller.orders.ForEachOrderController">

    <!-- Top Information Section -->
    <HBox spacing="20" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="7.0">
        <!-- Customer Info -->
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label styleClass="section-label" text="Customer Name:" />
            <Text fx:id="customerText" styleClass="header-text" text="Johnson Baby" />
        </HBox>

        <!-- Phone -->
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label styleClass="section-label" text="Phone: " />
            <Text fx:id="phoneText" styleClass="header-text" text="0963872314" />
        </HBox>

        <!-- Order Status -->
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label styleClass="section-label" text="Order Status: " />
            <Text fx:id="orderStatusText" styleClass="header-text" text="Playing" />
        </HBox>

        <!-- Bill Number -->
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <Label styleClass="section-label" text="Bill No: " />
            <Text fx:id="billNoText" styleClass="header-text" text="2" />
        </HBox>

        <!-- Finish Button -->
        <Button fx:id="finishOrderButton" onAction="#finishOrder" styleClass="finish-button" text="Finish this Order" />
    </HBox>

    <!-- Booking Table Section -->
    <VBox spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
        <Label styleClass="section-label" text="Booking Table" />
        <TableView fx:id="bookingPoolTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="sttColumn" minWidth="42.0" styleClass="number-aligned" text="STT" />
                <TableColumn fx:id="tableNameColumn" minWidth="137.5" styleClass="left-aligned" text="Table Name" />
                <TableColumn fx:id="startTimeColumn" minWidth="110.5" styleClass="left-aligned" text="Start Time" />
                <TableColumn fx:id="endTimeColumn" minWidth="112.0" styleClass="left-aligned" text="End Time" />
                <TableColumn fx:id="timeplayColumn" minWidth="72.0" styleClass="number-aligned" text="Timeplay" />
                <TableColumn fx:id="priceColumn" minWidth="94.5" styleClass="number-aligned" text="Price" />
                <TableColumn fx:id="subTotalColumn" minWidth="128.5" styleClass="number-aligned" text="SubTotal" />
                <TableColumn fx:id="costColumn" minWidth="119.5" styleClass="number-aligned" text="Net Total" />
                <TableColumn fx:id="statusColumn" minWidth="91.0" styleClass="left-aligned" text="Status" />
                <TableColumn fx:id="bookingActionColumn" minWidth="101.0" styleClass="number-aligned" text="Action" />
            </columns>
        </TableView>
    </VBox>

    <!-- Order Items Section -->
    <VBox spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="200.0">
        <Label styleClass="section-label" text="Order Item Table" />
        <TableView fx:id="orderItemsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="sttOrderItemColumn" minWidth="61.5" styleClass="number-aligned" text="STT" />
                <TableColumn fx:id="productNameColumn" minWidth="159.5" styleClass="left-aligned" text="Product Name" />
                <TableColumn fx:id="quantityColumn" minWidth="66.0" styleClass="number-aligned" text="Quantity" />
                <TableColumn fx:id="priceOrderItemColumn" minWidth="98.5" styleClass="number-aligned" text="Price" />
                <TableColumn fx:id="subTotalOrderItemColumn" minWidth="128.5" styleClass="number-aligned" text="Sub Total" />
                <TableColumn fx:id="netTotalOrderItemColumn" minWidth="123.5" styleClass="number-aligned" text="Net Total" />
                <TableColumn fx:id="orderItemActionColumn" minWidth="96.5" styleClass="number-aligned" text="Action" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>