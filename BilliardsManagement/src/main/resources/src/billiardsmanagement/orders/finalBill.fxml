<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.billiardsmanagement.controller.orders.PaymentController">
    <Label text="Payment Invoice" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Thông tin khách hàng -->
    <GridPane hgap="10" vgap="10">
        <Label text="Customer Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="customerNameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Phone Number:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="customerPhoneLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Total Payment:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
        <Label fx:id="totalCostLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: red; -fx-font-weight: bold;" />
    </GridPane>

    <TableView fx:id="billTable">
        <columns>
            <TableColumn fx:id="productNameColumn" text="Product Name"/>
            <TableColumn fx:id="quantityColumn" text="Quantity/Hours"/>
            <TableColumn fx:id="unitPriceColumn" text="Unit Price"/>
            <TableColumn fx:id="totalCostColumn" text="Total Price"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Button text="Print Bill" fx:id="printButton"  onAction="#printBill"/>
    <Button text="Pay Order" fx:id="payOrder" onAction="#payOrder"/>

</VBox>
