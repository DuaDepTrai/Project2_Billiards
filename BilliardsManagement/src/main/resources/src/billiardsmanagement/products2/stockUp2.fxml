<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="src.billiardsmanagement.controller.products2.StockUpController2"
      prefWidth="500" prefHeight="300">

    <Label text="Stock Up Product" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT">
        <Label text="Product:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-padding: 0 0 0 40;"/>
        <Label fx:id="lblProductName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Quantity to Add:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-padding: 0 0 0 40;"/>
        <TextField fx:id="txtQuantity" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Confirm" onAction="#handleConfirm" prefWidth="100"/>
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100"/>
    </HBox>
</VBox>
