<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="205.0" prefWidth="228.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.billiardsmanagement.controller.poolTables.catepooltables.UpdateCategoryPooltableController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Update Table Category" />

    <TextField fx:id="cateNameField" promptText="Enter new Category name" />
    <TextField fx:id="shortNameField" promptText="Enter new Short Name" />
    <TextField fx:id="priceField" promptText="Enter new Price" />

    <HBox alignment="CENTER" spacing="10">
        <Button defaultButton="true" onAction="#handleConfirm" text="Confirm" />
        <Button cancelButton="true" onAction="#handleClose" text="Close" />
    </HBox>
</VBox>
