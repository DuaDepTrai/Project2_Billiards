<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" prefWidth="300" prefHeight="250"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="src.billiardsmanagement.controller.poolTables.catepooltables.AddCategoryPooltableController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add New Pool Table Category" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <Label text="Category Name:"/>
    <TextField fx:id="nameField" promptText="Enter category name"/>

    <Label text="Short Name:"/>
    <TextField fx:id="shortNameField" promptText="Enter short name (max 10 chars)"/>

    <Label text="Price:"/>
    <TextField fx:id="priceField" promptText="Enter price"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Confirm" onAction="#handleConfirm" defaultButton="true"/>
        <Button text="Close" onAction="#handleClose" cancelButton="true"/>
    </HBox>

</VBox>