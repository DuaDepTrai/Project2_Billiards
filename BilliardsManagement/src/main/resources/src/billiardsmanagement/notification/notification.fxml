<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="400.0" prefWidth="320.0" styleClass="notification"
      stylesheets="@../css/notificationStyle.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="src.billiardsmanagement.controller.NotificationController"
      maxHeight="300.0"
      fillWidth="true">
    <VBox alignment="TOP_CENTER">
        <Label fx:id="titleLabel" styleClass="title-label" text="Title"
               textAlignment="RIGHT" wrapText="true" maxWidth="Infinity"/>

        <Label fx:id="messageLabel" styleClass="message-label" text="This is the Message"
               textAlignment="RIGHT" wrapText="true" maxWidth="Infinity" VBox.vgrow="ALWAYS"/>
    </VBox>
</VBox>
